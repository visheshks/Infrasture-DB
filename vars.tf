################################################################################################################
############################################### ACCESS & SECRET CREDS ##########################################
################################################################################################################

variable "aws_keys_file_location" {
    default = "//.aws/credentials"
}


################################################################################################################
############################################### REGION AND AZS VARS ############################################
################################################################################################################

variable "aws_region" {
    default = "us-east-1"
}

variable "profile" {
    default = "terraform"
}

variable "availability-zones" {
    type    = "list"
    default = ["a", "b"]
}


################################################################################################################
############################################### KEY PAIR VARS ##################################################
################################################################################################################

variable "nginx_key_pair_name" {
    default = "nginx"
}

variable "database_key_pair_name" {
    default = "database"
}

variable "private_key" {
    default = ""
}

variable "public_key" {
    default = "/demo/id_rsa.pub"
}

################################################################################################################
########################################### VPC AND SUBNETTING  VARS ###########################################
################################################################################################################

variable "cidr_block" {
    type = "map"
    default = {
        "vpc"          = "10.0.0.0/16"
        "dmz"          = "10.0.0.0/24"
        "database"  = "10.0.1.0/24"
    }
}

################################################################################################################
########################################### TAGGING DETAILS VARS ###############################################
################################################################################################################

variable "project" { default = "vishesh" }

variable "env" {
    default = "prod"
}


################################################################################################################
###################################### INSTANCE AND PRIVATE IP VARS ############################################
################################################################################################################


variable "private_ip" {
    type = "map"
    default = {
        "nginx"    = "10.0.0.20"
        "db1"      = "10.0.1.85"
        "db2"      = "10.0.1.86"
        "db3"      = "10.0.1.87"
    }
}

variable "dn_private_ip" {
  type = "list"
  default = ["10.1.1.85","10.1.1.86","10.1.1.87"]
}

variable "disable_api_termination" {
    default = false
}


